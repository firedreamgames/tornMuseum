            <h1 class="title">
                Museum Profit Calculator
                {{#if user}}
                    <span class="welcome">Welcome, {{user.name}}</span>
                {{/if}}
            </h1>
        </div>
        <div class="header-right">
            <a href="#" id="login-link">Login</a>
            <a href="#" id="update-link" style="display: none;">Update</a>
        </div>
    </div>
    <div class="main-container">
        <div class="sidebar-left"></div>
        <div class="sidebar">
            <div class="table-container">
                <h3>CURRENT POINT PRICE</h3>
                <table>
                    <tr>
                        <th>Point Price</th>
                        <th id="point-price">...................</th>
                    </tr>
                </table>
            </div>
            <div class="tables-wrapper">
                <div class="table-container">
                    <h3>PLUSHIES</h3>
                    <table>
                        <tr>
                            <th>Item</th>
                            <th>Current Price</th>
