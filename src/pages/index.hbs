        </div>
        <div class="sidebar-right"></div>
    </div>
    <div id="login-modal" class="modal">
        <div class="modal-content">
            <span class="close-button">&times;</span>
            <h2>Enter API Key</h2>
            <input type="text" id="api-key-input" placeholder="API Key" />
            <button id="save-api-key">Enter</button>
        </div>
    </div>
    <div id="response-modal" class="modal">
        <div class="modal-content">
            <span class="close-button">&times;</span>
            <h2>API Response</h2>
            <pre id="api-response"></pre>
        </div>
    </div>
    <script>
        const loginModal = document.getElementById('login-modal');
        const responseModal = document.getElementById('response-modal');
        const loginLink = document.getElementById('login-link');
        const updateLink = document.getElementById('update-link');
        const closeButtons = document.querySelectorAll('.close-button');

        loginLink.addEventListener('click', () => {
            loginModal.style.display = 'block';
        });

        closeButtons.forEach(button => {
            button.addEventListener('click', () => {
                loginModal.style.display = 'none';
                responseModal.style.display = 'none';
            });
        });

        window.addEventListener('click', event => {
            if (event.target === loginModal) {
                loginModal.style.display = 'none';
            }
            if (event.target === responseModal) {
                responseModal.style.display = 'none';
            }
        });

        document.getElementById('save-api-key').addEventListener('click', () => {
            const apiKey = document.getElementById('api-key-input').value;
            validateApiKey(apiKey);
        });

        document.getElementById('update-link').addEventListener('click', () => {
            const apiKey = document.getElementById('api-key-input').value;
            fetchAndUpdatePrices(apiKey);
        });

        function validateApiKey(apiKey) {
            fetch('/validate-api-key', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ apiKey })
            }).then(response => response.json())
              .then(data => {
                if (data.success) {
                    loginModal.style.display = 'none';
                    const titleElement = document.querySelector('.title');
                    const welcomeText = document.createElement('span');
                    welcomeText.className = 'welcome';
                    welcomeText.innerText = ` Welcome, ${data.user.name}`;
                    titleElement.appendChild(welcomeText);
                    document.getElementById('login-link').style.display = 'none';
                    document.getElementById('update-link').style.display = 'block';
                    
                    fetchAndUpdatePrices(apiKey);
                } else {
                    alert(`Failed to validate API key: ${data.error}`);
                }
              }).catch(error => {
                alert(`Failed to validate API key: ${error}`);
            });
        }

        function fetchAndUpdatePrices(apiKey) {
            // Fetch and update the point price
            fetch(`https://api.torn.com/market/?selections=pointsmarket&key=${apiKey}`)
                .then(response => response.json())
                .then(pointsData => {
                    let pts = Object.values(pointsData.pointsmarket).reduce((prev, curr) => {
                        return prev.cost < curr.cost ? prev : curr;
                    });
                    let pointPrice = pts.cost;
                    document.getElementById('point-price').innerText = pointPrice.toLocaleString();

                    // Items to fetch prices for
                    const items = [
                        { code: 258, id: 'price-jaguar' },
                        { code: 186, id: 'price-sheep' },
                        { code: 187, id: 'price-teddy-bear' },
                                                { code: 215, id: 'price-kitten' },
                        { code: 618, id: 'price-stingray' },
                        { code: 261, id: 'price-wolverine' },
                        { code: 274, id: 'price-panda' },
                        { code: 281, id: 'price-lion' },
                        { code: 384, id: 'price-camel' },
                        { code: 266, id: 'price-nessie' },
                        { code: 268, id: 'price-red-fox' },
                        { code: 269, id: 'price-monkey' },
                        { code: 273, id: 'price-chamois' },
                        { code: 385, id: 'price-tribulus-omanense' },
                        { code: 276, id: 'price-peony' },
                        { code: 277, id: 'price-cherry-blossom' },
                        { code: 282, id: 'price-african-violet' },
                        { code: 260, id: 'price-dahlia' },
                        { code: 263, id: 'price-crocus' },
                        { code: 267, id: 'price-heather' },
                        { code: 264, id: 'price-orchid' },
                        { code: 271, id: 'price-ceibo-flower' },
                        { code: 272, id: 'price-edelweiss' },
                        { code: 617, id: 'price-banana-orchid' }
                    ];

                    // Fetch and update the prices for each item
                    const pricePromises = items.map(item => {
                        return fetch(`https://api.torn.com/market/${item.code}?selections=bazaar&key=${apiKey}`)
                            .then(response => response.json())
                            .then(data => {
                                const price = data.bazaar[0].cost;
                                document.getElementById(item.id).innerText = price.toLocaleString();
                                return price;
                            });
                    });

                    // After fetching all prices, calculate and update convert to point prices and profits
                    Promise.all(pricePromises).then(prices => {
                        const plushiePrices = prices.slice(0, 13); // First 13 items are plushies
                        const flowerPrices = prices.slice(13); // The rest are flowers

                        const convertPointPlushies = parseInt(plushiePrices.reduce((a, b) => a + b, 0) / 10);
                        const convertPointFlowers = parseInt(flowerPrices.reduce((a, b) => a + b, 0) / 10);
                      
                        const profitPlushies = ((pointPrice / convertPointPlushies) - 1) * 100;
                        const profitFlowers = ((pointPrice  / convertPointFlowers) - 1) * 100;

                        document.getElementById('convert-point-plushies').innerText = convertPointPlushies.toLocaleString();
                        document.getElementById('convert-point-flowers').innerText = convertPointFlowers.toLocaleString();
                        document.getElementById('profit-plushies').innerText = profitPlushies.toFixed(2) + '%';
                        document.getElementById('profit-flowers').innerText = profitFlowers.toFixed(2) + '%';
                    });
                });
        }
    </script>
    <footer>
        Torn Museum Profit Calculator v1.0 2024 by H2O
    </footer>
</body>
</html>
