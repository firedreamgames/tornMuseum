                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Ceibo+Flower" target="_blank">Ceibo Flower</a></td><td id="price-ceibo-flower"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Edelweiss" target="_blank">Edelweiss</a></td><td id="price-edelweiss"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Crocus" target="_blank">Crocus</a></td><td id="price-crocus"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Heather" target="_blank">Heather</a></td><td id="price-heather"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Tribulus+Omanense" target="_blank">Tribulus Omanense</a></td><td id="price-tribulus-omanense"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Banana+Orchid" target="_blank">Banana Orchid</a></td><td id="price-banana-orchid"></td></tr>
