                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Sheep+Plushie" target="_blank">Sheep</a></td><td id="price-sheep"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Teddy+Bear+Plushie" target="_blank">Teddy Bear</a></td><td id="price-teddy-bear"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Kitten+Plushie" target="_blank">Kitten</a></td><td id="price-kitten"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Jaguar+Plushie" target="_blank">Jaguar</a></td><td id="price-jaguar"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Wolverine+Plushie" target="_blank">Wolverine</a></td><td id="price-wolverine"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Nessie+Plushie" target="_blank">Nessie</a></td><td id="price-nessie"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Red+Fox+Plushie" target="_blank">Red Fox</a></td><td id="price-red-fox"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Monkey+Plushie" target="_blank">Monkey</a></td><td id="price-monkey"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Chamois+Plushie" target="_blank">Chamois</a></td><td id="price-chamois"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Panda+Plushie" target="_blank">Panda</a></td><td id="price-panda"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Lion+Plushie" target="_blank">Lion</a></td><td id="price-lion"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Camel+Plushie" target="_blank">Camel</a></td><td id="price-camel"></td></tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Stingray+Plushie" target="_blank">Stingray</a></td><td id="price-stingray"></td></tr>
                        <tr><td>Convert to Point</td><td id="convert-point-plushies" colspan="2"></td></tr>
                        <tr><td>%Profit</td><td id="profit-plushies" colspan="2"></td></tr>
                    </table>
                </div>
                <div class="table-container">
                    <h3>FLOWERS</h3>
                    <table>
                        <tr>
                            <th>Item</th>
                            <th>Current Price</th>
                        </tr>
                        <tr><td><a href="https://www.torn.com/imarket.php#/p=shop&step=shop&type=&searchname=Dahlia" target="_blank">Dahlia</a></td><td id="price-dahlia"></td></tr>
